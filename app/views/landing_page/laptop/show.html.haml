.landing-page
  .hero-section
    %div{style: "display: flex; align-items: center; gap: 1.2em; margin-bottom: 1em;"}
      = image_tag 'logo.png', alt: 'Lightning Voting Logo', style: 'height: 100px; width: 100px; border-radius: 10%; box-shadow: 0 2px 8px rgba(0,0,0,0.08);'
      %div
        .seminar-title ⚡️ Lightning Voting
        .seminar-subtitle Vote on topics with Bitcoin Lightning ⚡️

  - if can?(:create, SocraticSeminar)
    .header-actions
      = link_to "New Event", new_socratic_seminar_path, class: "button"

  .voting-instructions
    %ul
      %li Vote for free with the Up & Down arrows. One vote per person.
      %li Send Lightning payments for additional votes. Each individual payment counts as 1 vote.
      %li All payments help support the community.

  .events-section
    %section.upcoming-events
      %h2 Upcoming Events
      .events-list
        - if @upcoming_seminars.any?
          - @upcoming_seminars.each do |seminar|
            = render "landing_page/event", socratic_seminar: seminar
        - else
          .no-events No upcoming events scheduled

    %section.past-events
      %h2 Past Events
      .events-list
        - if @past_seminars.any?
          - @past_seminars.each do |seminar|
            = render "landing_page/event", socratic_seminar: seminar
        - else
          .no-events No past events found

  %footer.sticky-footer
    .container
      = link_to 'Sats Vs Bitcoin', sats_vs_bitcoin_path, class: 'button'
      = link_to 'Projector Mode', projector_path, class: 'button'
