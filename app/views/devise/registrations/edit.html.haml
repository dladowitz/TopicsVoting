.auth-header-row
  %h2 Edit #{resource_name.to_s.humanize}
  = link_to "Back", :back, class: 'button'

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource

  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, autocomplete: "email"

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  .field
    = f.label :password
    %i (leave blank if no change)
    %br
    = f.password_field :password, autocomplete: "new-password"
    - if @minimum_password_length
      %br
      %em
        = @minimum_password_length
        characters minimum

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, autocomplete: "new-password"

  .field
    = f.label :current_password
    %i (current password to confirm changes)
    %br
    = f.password_field :current_password, autocomplete: "current-password"

  - if current_user&.admin? && resource != current_user
    .field
      = f.label :role
      %br
      = f.select :role, User::ROLES, prompt: "Select role"

  .actions
    = f.submit "Update"

%h3 Delete my account
%div
  = button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'button button-danger'

