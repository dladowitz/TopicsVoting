.sections
  %h1 New Section

  = form_with(model: [@socratic_seminar, @section], local: true) do |f|
    .field
      = f.label :name
      = f.text_field :name

    .actions
      = f.submit "Create Section", class: "button button-primary"
      = link_to "Cancel", edit_socratic_seminar_path(@socratic_seminar), class: "button button-secondary"
