= form_with(model: organization, local: true) do |f|
  - if organization.errors.any?
    #error_explanation
      %h2= "#{pluralize(organization.errors.count, "error")} prohibited this organization from being saved:"
      %ul
        - organization.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, required: true

  .field
    = f.label :city
    = f.text_field :city

  .field
    = f.label :country
    = f.text_field :country, maxlength: 2, placeholder: 'US'

  .field
    = f.label :website
    = f.text_field :website, placeholder: 'https://example.com'

  .actions{style: "margin-top: 1rem;"}
    = f.submit class: 'button'
    = link_to 'Cancel', organizations_path, class: 'button button-secondary'
