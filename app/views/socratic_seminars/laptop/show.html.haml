.socratic-seminars
  .seminar-header
    .title-section
      = render "socratic_seminars/laptop/socratic_seminar", socratic_seminar: @socratic_seminar

    .header-actions
      - if can? :manage, SocraticSeminar
        = link_to "Edit Seminar", edit_socratic_seminar_path(@socratic_seminar), class: 'button'
        = button_to "Delete Seminar", @socratic_seminar, method: :delete, class: 'button button-danger', data: { confirm: 'Are you sure? This will delete all topics and votes.' }

  .topics-section
    .section-header
      %h2 Topics for this Seminar
      = link_to "Add Topic", new_socratic_seminar_topic_path(socratic_seminar_id: @socratic_seminar.id), class: "button"

    - if @socratic_seminar.topics.any?
      .topics-list
        - @socratic_seminar.topics.each do |topic|
          .topic-item
            = link_to topic.name, socratic_seminar_topic_path(@socratic_seminar, topic)
    - else
      .no-topics
        %p No topics have been added yet.

  .footer-actions
    = link_to "Back to Seminars", socratic_seminars_path, class: 'button button-secondary'
