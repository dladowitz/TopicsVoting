<div class="container">
  <p style="color: green"><%= notice %></p>

  <div style="display: flex; align-items: center; gap: 1.2em; margin-bottom: 1em;">
    <%= image_tag 'logo.png', alt: 'Builder Voting Logo', style: 'height: 100px; width: 100px; border-radius: 10%; box-shadow: 0 2px 8px rgba(0,0,0,0.08);' %>
    <div>
      <div class="seminar-title">â‚¿uilder Voting</div>
      <div class="seminar-subtitle">Vote on topics for the next Socratic Seminar</div>
    </div>
  </div>

  <% if @admin_mode %>
    <div class="header-actions" style="margin-bottom: 1rem;">
      <%= link_to "New Socratic Seminar", new_socratic_seminar_path, class: "button" %>
      <%= button_to "Disable Admin Mode", disable_admin_mode_path, method: :post, class: "button button-danger" %>
    </div>
  <% end %>

  <div class="voting-instructions">
    <ul>
      <li>Vote for free with the Up & Down arrows. One vote per person.</li>
      <li>Send Lightning payments for additional votes. Each individual payment counts as 1 vote. Unlimited Lightning votes per person.</li>
      <li>All payments help pay for pizza.</li>
    </ul>
  </div>

  <div id="socratic_seminars">
    <% @socratic_seminars.each do |socratic_seminar| %>
      <%= render socratic_seminar %>
    <% end %>
  </div>
</div>

<footer class="sticky-footer">
  <div class="container" style="text-align: left;">
    <%= link_to 'Projector Mode', projector_path, class: 'button projector-footer-btn' %>
  </div>
</footer>
